<Window x:Class="WPF.WrapPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="WrapPanel" Height="450" Width="800">
    <Grid>
        <DockPanel>
        <WrapPanel DockPanel.Dock="Bottom" >
            <Button Height="100" Content="Arriba"/>
            <Button Width="150" Content="Izquierda"/>
            <Button Width="100" Content="Derecha"/>
            <Button Height="50" Content="Abajo"/>
            <Button Content="Centro"/>
        </WrapPanel>
        </DockPanel>
    </Grid>
</Window>
